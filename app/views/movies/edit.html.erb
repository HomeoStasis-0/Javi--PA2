<div style="text-align: center;">
  <h1 style="text-align: center; color: #333; margin-top: 20px;">Editing Movie</h1>

  <%= form_with(model: @movie, url: movie_path(@movie)) do |form| %>
    <table style="width: 50%; margin: 20px auto; border-collapse: collapse;">
      <thead>
        <tr>
          <th style="border: 1px solid black; padding: 8px; text-align: left;">Attribute</th>
          <th style="border: 1px solid black; padding: 8px; text-align: left;">Value</th>
        </tr>
      </thead> 
      <tbody>
        <tr>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.label :title %></td>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.text_field :title, style: "font-family: Arial, sans-serif;" %></td>
        </tr>
        <tr>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.label :rating %></td>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.text_field :rating, style: "font-family: Arial, sans-serif;" %></td>
        </tr>
        <tr>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.label :release_date %></td>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.text_field :release_date, style: "font-family: Arial, sans-serif;" %></td>
        </tr>
        <tr>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.label :description %></td>
          <td style="border: 1px solid black; padding: 8px; text-align: left;"><%= form.text_area :description, style: "font-family: Arial, sans-serif;" %></td>
        </tr>
      </tbody>
    </table>

    <div style="text-align: center; margin-top: 20px;">
      <div style="display: inline-block; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">
        <%= form.submit "Update Movie", style: "background-color: #4CAF50; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
      </div>
    </div>
  <% end %>

  <br>

  <div style="text-align: center; margin-top: 20px;">
    <div style="display: inline-block; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">
      <%= link_to "Show this movie", @movie, style: "background-color: #4CAF50; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %> |
      <%= link_to "Back to movies", movies_path, style: "background-color: #4CAF50; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
    </div>
  </div>
</div>